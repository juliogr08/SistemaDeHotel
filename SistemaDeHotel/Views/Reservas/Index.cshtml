@model IEnumerable<SistemaDeHotel.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f0f4f8, #AEB0B0);
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 30px;
        }

        .reservation-table {
            width: 100%;
            max-width: 900px;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

            .reservation-table th, .reservation-table td {
                padding: 15px;
                text-align: center;
                border-bottom: 1px solid #ddd;
            }

            .reservation-table th {
                background-color: #2c3e50;
                color: white;
            }

            .reservation-table tr:hover {
                background-color: #f1f1f1;
            }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-edit {
            background-color: #3498db;
        }

            .btn-edit:hover {
                background-color: #2980b9;
            }

        .btn-details {
            background-color: #2ecc71;
        }

            .btn-details:hover {
                background-color: #27ae60;
            }

        .btn-delete {
            background-color: #e74c3c;
        }

            .btn-delete:hover {
                background-color: #c0392b;
            }

        .btn-pay {
            background-color: #f39c12;
        }

            .btn-pay:hover {
                background-color: #e67e22;
            }

        .new-reservation {
            display: block;
            width: 200px;
            margin: 20px auto;
            padding: 10px;
            text-align: center;
            background-color: #2c3e50;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }

            .new-reservation:hover {
                background-color: #1a242f;
            }

        .texto {
            colo: black;
        }
    </style>
</head>
<body>
    <h1 class="texto">Reservas</h1>

    <a class="new-reservation" asp-action="Create">Crear Nueva Reserva</a>

    <table class="reservation-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaEntrada)</th>
                <th>@Html.DisplayNameFor(model => model.FechaSalida)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.FormaPago)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.Habitacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaEntrada)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaSalida)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.FormaPago)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Habitacion.Id)</td>
                    <td>
                        <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-details" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> |
                        <a class="btn btn-pay" asp-action="Index" asp-controller="Pagos" asp-route-id="@item.Id">Pagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
